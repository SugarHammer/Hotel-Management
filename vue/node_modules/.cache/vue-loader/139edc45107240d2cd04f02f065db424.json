          text:'酒店收入统计'\n            },\n            tooltip: {\n                trigger: 'axis',\n                axisPointer: {\n                  type: 'cross',\n                  crossStyle: {\n                    color: '#999'\n                  }\n                }\n              },\n            //工具箱\n            //保存图片\n            toolbox: {\n                show: true,\n                feature: {\n                    mark: {show: true},\n                    dataView: {show: true, readOnly: false},\n                    restore: {show: true},\n                    saveAsImage: {show: true}\n                }\n            },\n            //图例-每一条数据的名字叫销量\n            legend:{\n                data:['销量'],\n            },\n            //x轴\n            xAxis:{\n                data:[]\n            },\n            //y轴没有显式设置，根据值自动生成y轴\n            yAxis:{axisLabel: {\n                    formatter: '{value}'\n                  }},\n            //数据-data是最终要显示的数据\n            series:[{\n                name:'收入',\n                type:'line',\n                data:[],\n            }]\n            };\n        request.get(\"/order/count\").then(res => {\n          if (res.code === '0') {\n            res.data.forEach(item => {\n              option.series[0].data.push(item.count);\n              option.xAxis.data.push(item.name)\n            })\n            // 绘制图表\n            myChart.setOption(option);\n          }\n        })\n      }\n    },\n    mounted() {\n      this.drawCharts();\n    },\n  };\n    \n</script>\n"]}]}